<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrapStyle" >
 <RelativeLayout
       style="@style/MatchWrapStyle"
        android:padding="6dp" >

        <TextView
            android:id="@+id/tv_setclick_title"
            style="@style/WrapStyle"
            />

        <TextView
            android:id="@+id/tv_setclick_des"
            style="@style/WrapStyle"
            android:layout_below="@id/tv_setclick_title"
            />

        <ImageView
            android:background="@drawable/jiantou1_pressed"
            android:id="@+id/iv_image"
            style="@style/WrapStyle"
            android:layout_alignParentRight="true" />
        <View 
            android:layout_below="@id/tv_setclick_des"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />
    </RelativeLayout>

</RelativeLayout>
