<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="@string/sim_bind" />

    <TextView
        style="@style/MatchWrapStyle"
        android:text="@string/sim_change_error" />
<com.zhang.zhangsafe.view.SettingItemView 
        xmlns:zhangsafe="http://schemas.android.com/apk/res/com.zhang.zhangsafe"
        android:id="@+id/siv_set_bound"
        style="@style/MatchWrapStyle"
        zhangsafe:destitle="点击绑定sim卡"
        zhangsafe:desoff="sim卡没有绑定"
        zhangsafe:deson="sim卡已绑定"
         />
    <LinearLayout
        style="@style/MatchWrapStyle"
        android:gravity="center_horizontal" >

        <ImageView
            style="@style/WrapStyle"
            android:background="@android:drawable/presence_invisible" />

        <ImageView
            style="@style/WrapStyle"
            android:background="@android:drawable/presence_online" />

        <ImageView
            style="@style/WrapStyle"
            android:background="@android:drawable/presence_invisible" />

        <ImageView
            style="@style/WrapStyle"
            android:background="@android:drawable/presence_invisible" />
    </LinearLayout>

    <RelativeLayout style="@style/MatchStyle" >

        <ImageView
            style="@style/WrapStyle"
            android:layout_centerInParent="true"
            android:background="@drawable/bind" />
        <Button style="@style/PreBtnStyle"/>
        <Button style="@style/NextBtnStyle" />
    </RelativeLayout>

</LinearLayout>